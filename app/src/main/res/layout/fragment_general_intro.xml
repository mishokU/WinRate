<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient_wc"
        tools:context=".ui.fragments.GeneralIntroFragment">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/general_intro_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/general_intro_tab_layout"
            android:background="@drawable/background_gradient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            app:tabBackground="@drawable/general_intro_tree_dots"
            android:layout_marginBottom="60dp"
            app:tabGravity="center"/>

    </FrameLayout>


</layout>
